{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
    "paths": {
      "test/*": ["test/*"],
      "src/*": ["src/*"],
      "context/*": ["src/context/*"],
      "controllers/*": ["src/controllers/*"],
      "thirdparty/*": ["src/thirdparty/*"],
      "util/*": ["src/util/*"]
    }
  },
  "include": [
    "test/**/*",
    "src/**/*"
  ]
}
